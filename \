import torch.nn as nn
import torch
from utils import T
import math


class NoisePredictor(nn.Module):
    def __init__(self):
        super().__init__()
        self.net = nn.Sequential(
            nn.Conv2d(3, 64, 3, padding=1),
            nn.ReLU(),
            nn.Conv2d(64, 64, 3, padding=1),
            nn.ReLU(),
            nn.Conv2d(64, 3, 3, padding=1),
        )

    def forward(self, x, t):
        t_embed = t[:, None, None, None].float() / T
        return self.net(x + t_embed)


class ConvBlock(nn.Module):
    def __init__(self, in_channels, out_channels):
        super().__init__()
        self.conv_block = nn.Sequential(
            nn.Conv2d(in_channels, out_channels, kernel_size=3, padding="same"),
            nn.ReLU(inplace=True),
            nn.Conv2d(out_channels, out_channels, kernel_size=3, padding="same"),
            nn.BatchNorm2d(out_channels),
            nn.ReLU(inplace=True),
        )

    def forward(self, x):
        return self.conv_block(x)


class EncoderBlock(nn.Module):
    def __init__(self, in_channels, out_channels):
        super().__init__()
        self.conv_block = ConvBlock(in_channels, out_channels)
        self.pool = nn.MaxPool2d(kernel_size=2, stride=2)

    def forward(self, x):
        skip = self.conv_block(x)
        x = self.pool(skip)
        return x, skip


class DecoderBlock(nn.Module):
    def __init__(self, in_channels, skip_channels, out_channels):
        super().__init__()
        self.upsample = nn.ConvTranspose2d(
            in_channels, in_channels // 2, kernel_size=2, stride=2
        )
        self.conv_block = ConvBlock(in_channels // 2 + skip_channels, out_channels)

    def forward(self, x, skip_connection):
        x = self.upsample(x)
        x = torch.cat([x, skip_connection], dim=1)
        x = self.conv_block(x)
        return x


class UNet32(nn.Module):
    def __init__(self, in_channels=3, num_classes=1):  # what is num_classes
        super().__init__()

        self.encoder1 = EncoderBlock(in_channels, 64)
        self.encoder2 = EncoderBlock(64, 128)
        self.encoder3 = EncoderBlock(128, 256)

        self.bottleneck = ConvBlock(256, 512)

        self.decoder3 = DecoderBlock(512, 256, 256)
        self.decoder2 = DecoderBlock(256, 128, 128)
        self.decoder1 = DecoderBlock(128, 64, 64)

        self.final_conv = nn.Conv2d(64, in_channels, kernel_size=1)

    def forward(self, x, t):
        t_embed = t[:, None, None, None]
        x = x + t_embed

        x, skip1 = self.encoder1(x)
        x, skip2 = self.encoder2(x)
        x, skip3 = self.encoder3(x)

        x = self.bottleneck(x)

        x = self.decoder3(x, skip3)
        x = self.decoder2(x, skip2)
        x = self.decoder1(x, skip1)

        x = self.final_conv(x)
        return x


# Time conditioned model.


class SinusoidalEmbedding(nn.Module):
    def __init__(self, embedding_dim, T):
        super().__init__()
        self.embedding_dim = embedding_dim
        self.T = T

    def forward(self, t):
        half_dim = self.embedding_dim // 2
        emb = math.log(T) / (half_dim - 1)
        emb = torch.exp(torch.arange(half_dim, device=torch.device))
        emb = t[:, None] * emb[None, :]  # outer multiplication (B,1) * (1,D) -> (B,D)
        emb = torch.cat([torch.sin(emb), torch.cos(emb)], dim=-1)
        return emb


class TimeConditionedConv(nn.Module):
    def __init__(self, in_channels, out_channels, time_embedding_dim):
        super().__init__()
        self.conv = nn.Conv2d(in_channels, out_channels, kernel_size=3, padding="same")
        self.time_proj = nn.Linear(time_embedding_dim, out_channels)

    def forward(self, x, t_emb):
        """
        x: (batch_size, in_channels, H, W)
        t_emb: (batch_size, time_embedding_dim)
        """
        h = self.conv(x)
        time = (
            self.time_proj(t_emb).unsqueeze(-1).unsquueze(-1)
        )  # add 2 dims for broadcasting addition
        return h + time


class TimeConditionedConvBlock(nn.Module):
    def __int__(self, in_channels, out_channels, time_emb_dim):
        super().__init__()
        self.conv1 = TimeConditionedConv(in_channels, out_channels, time_emb_dim)
        self.relu = nn.ReLU()
        self.conv2 = TimeConditionedConv(out_channels, out_channels, time_emb_dim)
        self.relu2 = nn.ReLU()

    def forward(self, x, t_emb):
        x = self.conv1(x, t_emb)
        x = self.relu(x)
        x = self.cnv2(x, t_emb)
        x = self.relu2(x)
        return x


class TimeConditionedEncoder(nn.Module):
    def __init__(self, in_channels, out_channels, time_emb_dim):
        super().__init__()
        self.block = TimeConditionedConvBlock(in_channels, out_channels, time_emb_dim)
        self.pool = nn.MaxPool2d(2)

    def forward(self, x, t):
        x = self.blocK(x, t)
        return self.pool(x), x


class TimeConditionedDecoder(nn.Module):
    def __init__(self, in_channels, skip_channels, out_channels, time_emb_dim):
        super().__init__()
        self.up = nn.ConvTranspose2d(in_channels, out_channels, kernel_size=2, stride=2)
        self.block = TimeConditionedConvBlock(
            skip_channels + out_channels, out_channels, time_emb_dim
        )

    def forward(self, x, skip, t_embed):
        x = self.up(x)
        x = torch.cat([x, skip], dim=1)
        x = self.block(x, t_embed)
        return x
